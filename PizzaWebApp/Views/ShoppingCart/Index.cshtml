
@model IEnumerable<PizzaWebApp.Models.CartItems>  


<div class="mt-5 mb-3 pt-5 pb-3">


    
         <table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Ingredients</th>
      <th scope="col">Price per pizza</th>
      <th scope="col">Amount</th>
      <th scope="col">Total</th>
    </tr>
  </thead>
  <tbody>


            @foreach(var item in Model)
            {
      <tr>
      <th scope="row">@item.PizzaName</th>
      <td>@item.PizzaIngredients</td>
      <td id="PizzaPrice">@item.PizzaPrice</td>
      <td><input type="number" value="@item.Amount" class="form-control">
          <button type="button" class="btn btn-light" id="updateAmount">Update Amount</button></td>
      <td id="TotalItemPrice"></td>
    </tr>
            }
           

    
    
  </tbody>
</table>



</div>
