

<section style="background-color: white;">
	<div class="container h-100 mb-5">

		<div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1 mb-5">

			<p class="text-center h3 fw-bold mb-5 mx-1 mx-md-4 mt-4">Your <strong>Orders</strong></p>





		</div>


		<table class="table">

			<thead>
				<tr>

					<th scope="col">Order</th>
					<th scope="col">Price</th>
					<th scope="col">Date</th>
					<th scope="col">Shipped To</th>
					<th scope="col">Street</th>


				</tr>
			</thead>
			<tbody>
				@*TODO:Check of orders is empty before*@
				@{
					foreach (var item in ViewBag.UserOrders)
					{
						<tr>

							<td>@item.OrderDesc</td>
							<td>$@item.Price.ToString("0.00")</td>
							<td>@item.Date</td>
							<td>@ViewBag.ShippingAddress.Name @ViewBag.ShippingAddress.Surname</td>
							<td>@ViewBag.ShippingAddress.Street</td>
						</tr>

					}
				}


			</tbody>
		</table>

		<div class="d-flex justify-content-center mt-5 mb-5">
    <h4 class="m-5 ">@ViewBag.Message</h4>
</div>

	</div>





</section>