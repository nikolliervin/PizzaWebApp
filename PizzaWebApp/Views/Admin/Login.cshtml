@model PizzaWebApp.Data.AppUser;

<section style="background-color: white;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        
      
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1 mb-5">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Login as Admin</p>

                <form class="mx-1 mx-md-4 mb-5" method="post" asp-action="Login">


                  <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="form3Example3c" >Your Username</label>
                      <input type="text" id="form3Example3c" class="form-control" asp-for="@Model.UserName"/>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="form3Example4c" >Password</label>
                      <input type="password" id="form3Example4c" class="form-control" asp-for="@Model.PasswordHash" />
                      
                    </div>
                  </div>

             

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary btn-lg" asp-controller="Admin" asp-action="Login">Login</button>

                  </div>

                   <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <p class="text-danger text-center">@ViewBag.Message</p>

                  </div>

                 

                </form>

              </div>
              
            </div>
          </div>
        </div>
      </div>
    
 
</section>

