@model IEnumerable<PizzaWebApp.Models.Contact>

<div class="d-flex mt-5 w-100">

	<div class="border-end bg-white p-2 flex-shrink-1 mt-5">

		<div class="list-group list-group-flush mt-5 mb-2">
			<a class="list-group-item list-group-item-action list-group-item-light p-3" asp-action="Orders">Orders</a>
			<a class="list-group-item list-group-item-action list-group-item-light p-3" asp-action="Bookings">Bookings</a>
			<a class="list-group-item list-group-item-action list-group-item-light p-3" asp-action="Contacts">Contacts</a>
			<a class="list-group-item list-group-item-action list-group-item-light p-3" asp-action="Users">Users</a>
		</div>
	</div>

	<div class="mt-lg-5 p-2 w-75 mx-auto">
		<h4>Contacts<strong>.</strong></h4>
		<div class="table-responsive">
		
		<table class="table">
			<thead>
				<tr>
					<th scope="col">Name</th>
					<th scope="col">Email</th>
					<th scope="col">Subject</th>
					<th scope="col">Message</th>


				</tr>
			</thead>
			<tbody>
				@{
					foreach (var item in Model)
					{

						<tr>

							<td>@item.Name</td>
							<td>@item.Email</td>
							<td>@item.Subject</td>

							<td>@item.Message</td>
						</tr>
					}
				}


			</tbody>
		</table>
		</div>
	</div>
</div>