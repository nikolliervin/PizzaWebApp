@model PizzaWebApp.Models.ShippingAddress;

<section style="background-color: white;">
  <div class="container h-100 mb-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        
      
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1 mb-5">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                <form class="mx-1 mx-md-4 mb-5" method="post" asp-action="AddAddress">

                  <div class="d-flex flex-row align-items-center mb-3">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example3c">Street</label>
                        <input type="text" class="form-control" asp-for="@Model.Street" />
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-3">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example4c">City</label>
                        <input type="text"  class="form-control" asp-for="@Model.City" />                      
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-3">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example4cd">PostalCode</label>
                        <input type="text" class="form-control" asp-for="@Model.PostalCode" />        
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-3">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example4cd">Name</label>
                        <input type="text" class="form-control" asp-for="@Model.Name" />        
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-3">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example4cd">Surname</label>
                        <input type="text" class="form-control" asp-for="@Model.Surname" />        
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-3">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example4cd">Phone Number</label>
                        <input type="tel" class="form-control" asp-for="@Model.PhoneNumber" />        
                    </div>
                  </div>
               

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      
                    <button type="submit" class="btn btn-primary btn-lg" asp-controller="ShippingAddress" asp-action="AddAddress">Add Address</button>
                  </div>
                  
                  
                </form>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="/img/delivery.jpg/"
                  class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    
 
</section>