@model PizzaWebApp.Models.Pizza;


<section class="mt-3 ">


<div class="container mt-5 w-50 flex-column justify-content-center" data-aos="fade-up">

        <div class="section-header mt-2">
          <h2></h2>
          <p>Proceed with your <span>Order</span></p>
        </div>
    <div class="form flex-column justify-content-center">
        <div class="m-2">
            <img src="/img/pizza.png" />
        </div>
     <form method="post" asp-action="PostOrder" class="mt-5">

         <input asp-for="Id" hidden />

        <div class="form-group">
        <label for="formGroupExampleInput">Pizza</label>
        <input asp-for="Name" disabled type="text" class="form-control" id="formGroupExampleInput" placeholder="Example input">
        </div>
        <div class="form-group">
        <label for="formGroupExampleInput2">Ingredients</label>
        <input asp-for="Ingredients" disabled type="text" class="form-control" id="formGroupExampleInput2" placeholder="Another input">
        </div>
        <div class="form-group">
        <label for="formGroupExampleInput2">Price</label>
        <input asp-for="Price" disabled type="text" class="form-control" id="price" placeholder="Another input">
        </div>
        <div class="form-group">
        <label for="formGroupExampleInput2">Amount</label>
        <input type="number" class="form-control" id="formGroupExampleInput2" placeholder="Another input" min="1" value="1">
        </div>
        <hr class="hr hr-blurry" />
        <div class="form-group">
        <label for="TotalAmout" id="totalPrice">Total Price:</label>
        
        </div>

         
    </form>
    </div>
        
    </div>
</section>
